{
    "manifest_version": 3,
    "name": "VoxType Pro - Global Voice to Text",
    "version": "1.5.3",
    "description": "Premium voice-to-text transcription with global shortcuts. Instantly transcribe speech to text with auto-copy to clipboard.",
    "author": "Chet McKnight",
    "icons": {
        "16": "vox16.png",
        "32": "vox16.png",
        "48": "vox48.png",
        "128": "vox128.png"
    },
    "permissions": [
        "storage",
        "activeTab",
        "clipboardWrite",
        "sidePanel",
        "tabs"
    ],
    "host_permissions": [
        "https://www.google.com/*",
        "https://*.google.com/*"
    ],
    "action": {
        "default_title": "VoxType",
        "default_icon": {
            "16": "vox16.png",
            "32": "vox16.png",
            "48": "vox48.png",
            "128": "vox128.png"
        }
    },
    "side_panel": {
        "default_path": "index.html"
    },
    "commands": {
        "toggle-recording": {
            "suggested_key": {
                "default": "Ctrl+Shift+9",
                "mac": "Command+Shift+9"
            },
            "description": "Toggle VoxType",
            "global": true
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}